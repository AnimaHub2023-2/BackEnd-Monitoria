<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="01" author="Davi Pereira">

        <createTable tableName="INSTITUICAO">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="NOME" type="varchar2(50)" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="IMG_LOGO" type="varchar2(300)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="DECRICAO" type="varchar2(150)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="DT_REGISTRO" type="date">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createSequence incrementBy="1"
                        cacheSize="0"
                        maxValue="999999999999999999999999999"
                        minValue="1"
                        sequenceName="SEQ_INSTITUICAO"
                        startValue="1"/>
    </changeSet>


</databaseChangeLog>